@model StudentManagerment2.Models.Grade

@{
    ViewBag.Title = "Thêm điểm số";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">📌 Thêm điểm số</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "Grade", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="mb-3">
                    @Html.LabelFor(m => m.StudentId, "Sinh viên", new { @class = "form-label fw-bold" })
                    @Html.DropDownList("StudentId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.StudentId, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.SubjectID, "Môn học", new { @class = "form-label fw-bold" })
                    @Html.DropDownList("SubjectID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.SubjectID, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Score, "Điểm số", new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.Score, new { @class = "form-control", type = "number", step = "0.1", min = "0", max = "10" })
                    @Html.ValidationMessageFor(m => m.Score, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Thêm
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
