@{
    ViewBag.Title = "Trang chủ";
}

<h2 class="text-center my-4">Đại Học Công Nghiệp Hà Nội</h2>

<div class="container">
    <div class="row justify-content-center">
       
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-person-fill display-4 text-primary"></i>
                    <h5 class="card-title mt-3">Student Management</h5>
                    <a href="@Url.Action("Index", "Student")" class="btn btn-primary">Quản lý sinh viên</a>
                </div>
            </div>
        </div>

        
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-person-badge-fill display-4 text-success"></i>
                    <h5 class="card-title mt-3">Teacher Management</h5>
                    <a href="@Url.Action("Index", "Teacher")" class="btn btn-success">Quản lý giảng viên</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-door-open-fill display-4 text-warning"></i>
                    <h5 class="card-title mt-3">Class Management</h5>
                    <a href="@Url.Action("Index", "Class")" class="btn btn-warning">Quản lý lớp học</a>
                </div>
            </div>
        </div>

        
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-bar-chart-fill display-4 text-danger"></i>
                    <h5 class="card-title mt-3">Grade Management</h5>
                    <a href="@Url.Action("Index", "Grade")" class="btn btn-danger">Quản lý điểm số</a>
                </div>
            </div>
        </div>

        
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-book-fill display-4 text-info"></i>
                    <h5 class="card-title mt-3">Subject Management</h5>
                    <a href="@Url.Action("Index", "Subject")" class="btn btn-info">Quản lý môn học</a>
                </div>
            </div>
        </div>
    </div>
</div>
