@model StudentManagerment2.Models.Subject

@{
    ViewBag.Title = "Thêm môn học mới";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-bookmark-plus"></i> Thêm Môn học</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "Subject", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="mb-3">
                    @Html.LabelFor(m => m.SubjectName, "Tên môn học", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.SubjectName, new { @class = "form-control", placeholder = "Nhập tên môn học" })
                    @Html.ValidationMessageFor(m => m.SubjectName, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Description, "Mô tả", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "Nhập mô tả môn học" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Thêm
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
