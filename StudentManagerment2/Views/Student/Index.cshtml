@model IEnumerable<StudentManagerment2.Models.Student>

@{
    ViewBag.Title = "Thông tin sinh viên";
}

<h2 class="text-center text-primary">Thông tin sinh viên</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary mb-3" })
</p>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr class="text-center">
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Class.ClassName)</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                <td>@item.DateOfBirth.ToString("dd/MM/yyyy")</td> <!-- Hiển thị ngày sinh rõ ràng -->
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Class.ClassName)</td>
                <td class="text-center">
                    <div class="d-inline">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm mr-2" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
