@model StudentManagerment2.Models.User

@{
    ViewBag.Title = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow border-0 p-3 rounded-4" style="width: 380px; background: #ffffff;">
        <div class="card-body">
            <h4 class="text-center text-primary fw-bold"><i class="bi bi-person-plus-fill"></i> Đăng ký</h4>
            <hr>

            @using (Html.BeginForm("Create", "Account", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
            {
                @Html.AntiForgeryToken()

                <div class="mb-2">
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Tên đăng nhập" })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>

                <div class="mb-2">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", placeholder = "Email" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

                <div class="mb-2">
                    @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", placeholder = "Số điện thoại" })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>

                <div class="mb-2">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Mật khẩu" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>

                <div class="mb-2">
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", placeholder = "Xác nhận mật khẩu" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                </div>

                <div class="mb-2">
                    @Html.DropDownListFor(x => x.RoleId, ViewBag.Role as SelectList, "- Chọn quyền -", new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-primary w-100 fw-bold mt-2">
                    <i class="bi bi-person-plus"></i> Đăng ký
                </button>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
