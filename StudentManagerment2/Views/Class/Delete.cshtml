@model StudentManagerment2.Models.Class

@{
    ViewBag.Title = "Delete";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0 text-center">⚠️ Bạn có chắc chắn muốn xóa không?</h3>
        </div>
        <div class="card-body">
            <h4 class="mb-3">Thông tin lớp học</h4>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.ClassName)</th>
                        <td>@Html.DisplayFor(model => model.ClassName)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <td>@Html.DisplayFor(model => model.Description)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Subject.SubjectName)</th>
                        <td>@Html.DisplayFor(model => model.Subject.SubjectName)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Teacher.FullName)</th>
                        <td>@Html.DisplayFor(model => model.Teacher.FullName)</td>
                    </tr>
                </tbody>
            </table>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Xóa
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
