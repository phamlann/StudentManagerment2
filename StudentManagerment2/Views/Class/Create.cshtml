@model StudentManagerment2.Models.Class

@{
    ViewBag.Title = "Create";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-success text-white">
            <h3 class="mb-0">➕ Thêm mới lớp học</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "Class", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="mb-3">
                    @Html.LabelFor(m => m.ClassName, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.ClassName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ClassName, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Description, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.SubjectId, "Môn học", new { @class = "form-label fw-bold" })
                    @Html.DropDownList("SubjectId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.SubjectId, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.TeacherId, "Giáo viên", new { @class = "form-label fw-bold" })
                    @Html.DropDownList("TeacherId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.TeacherId, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Thêm
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
